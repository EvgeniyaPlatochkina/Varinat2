			</Grid.RowDefinitions>

			<StackPanel
				Grid.Column="0"
				Orientation="Horizontal"
				HorizontalAlignment="Left"
				VerticalAlignment="Center">
				<TextBox
					Margin="27,3,0,0"
					Height="47"
					Width="400"
					FontSize="20"
					HorizontalContentAlignment="Left"
					VerticalContentAlignment="Center"
					Watermark="Введите для поиска"
					Background="#CEFFF9"/>

				<ComboBox
					Name="CbSort"
					Margin="17,3,0,0"
					Width="200"
					Height="47"
					PlaceholderText="Сортировка"
					Background="#CEFFF9">
					<ComboBoxItem Content="По типу продукта"/>
					<ComboBoxItem Content="По наименованию продукта"/>
					<ComboBoxItem Content="По артикулу"/>
					<ComboBoxItem Content="По стоимости"/>
				</ComboBox>

				<ComboBox
					Margin="15,3,0,0"
					Width="166"
					Height="47"
					PlaceholderText="Фильтрация"
					Background="#CEFFF9"
					Items="{Binding FilteringList}"/>

